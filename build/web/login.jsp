<div id="bigBox">
    <form action="main" method="post">
        <input type="hidden" name="action" value="authenticate" />
        <div id="loginBox">
            <center><h2>Login</h2>
                <fieldset>
                    <legend>User Login</legend>
                    <table border="0">
                        <tr>
                            <td><p align="right"><b>Email : </b></p></td>
                            <td><p><input type="email" name="email" maxlength="50" size="15"/></p></td>
                        </tr>
                        <tr>
                            <td><p align="right"><b>Password : </b></p></td>
                            <td><p><input type="password" name="password" maxlength="10" size="15"/></p></td>
                        </tr>
                        <tr>
                            <td colspan="2"><p align="center"><input type="submit" value="Login"></p></td>
                        </tr>
                    </table>
                </fieldset>
            </center>
        </div>
    </form>
</div>